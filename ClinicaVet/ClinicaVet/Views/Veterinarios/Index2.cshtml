@model IEnumerable<ClinicaVet.Models.Veterinarios>

@{
   Layout = "_Layout2";
   ViewData["Title"] = "Index";
}



<!-- Portfolio Grid-->
<section class="page-section bg-light" id="portfolio">
   <div class="container">
      <div class="text-center">
         <h2 class="section-heading text-uppercase">Portfolio</h2>
         <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
      </div>
      <div class="row">
         @foreach (var item in Model) {

            <div class="col-lg-4 col-sm-6">
               <div class="portfolio-item">
                  <a class="portfolio-link" asp-action="Details" asp-controller="Veterinarios" asp-route-id="@item.ID">
                     <div class="portfolio-hover">
                        <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                     </div>
                     <img class="img-fluid" src="~/Imagens/Vets/@item.Foto" alt="" />
                  </a>
                  <div class="portfolio-caption">
                     <div class="portfolio-caption-heading">@item.Nome</div>
                     <div class="portfolio-caption-subheading text-muted">@item.NumCedulaProf</div>
                  </div>
               </div>
            </div>
         }
      </div>
   </div>
</section>





